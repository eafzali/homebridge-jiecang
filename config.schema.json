{
  "pluginAlias": "LinakController",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Linak Platform"
      },
      "pollingRate": {
        "title": "Polling timeout",
        "type": "number",
        "required": true,
        "default": 20,
        "minimum": 10
      },
      "idasenControllerPath": {
        "title": "Path to Idasen-Controller",
        "type": "string",
        "required": true,
        "default": "/home/pi/.local/bin/idasen-controller"
      },
      "desks": {
        "type": "array",
        "maxItems": 5,
        "items": {
          "title": "Desk",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "Linak Desk"
            },
            "macAddress": {
              "title": "Desk MAC Address",
              "type": "string",
              "required": true,
              "default": ""
            }
          }
        }
      }
    }
  }
}