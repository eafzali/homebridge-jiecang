{
  "pluginAlias": "JiecangController",
  "pluginType": "platform",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Jarvis Platform"
      },
      "desks": {
        "type": "array",
        "maxItems": 5,
        "items": {
          "title": "Desk",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "Jarvis Desk"
            },
            "macAddress": {
              "title": "Desk MAC Address",
              "type": "string",
              "required": true,
              "default": ""
            },
            "baseHeight": {
              "title": "Base height in inches",
              "type": "number",
              "required": true,
              "default": "26"
            },
            "maxHeight": {
              "title": "Max Height in inches",
              "type": "number",
              "required": true,
              "default": "42"
            }
          }
        }
      }
    }
  }
}
